{
  "rules": {
    "admin": {
      ".read": "root.child('admin').hasChild(auth.uid)",
      ".write": "root.child('admin').hasChild(auth.uid)"
    },
    "post": {
      "$post_id": {
        ".read": "true",
        ".write": "!data.exists() || data.child('created_by').val() === auth.uid || root.child('admin').hasChild(auth.uid)",
        ".validate": "newData.hasChildren(['title','content','created_by','created_on'])",
        "title": {
          ".validate": "newData.isString()"
        },
        "content": {
          ".validate": "newData.isString()"
        },
        "created_by": {
          ".validate": "newData.isString()"
        },
        "updated_by": {
          ".validate": "newData.isString()"
        },
        "created_on": {
          ".validate": "newData.isString()"
        },
        "updated_on": {
          ".validate": "newData.isString()"
        },
        "$other": {
          ".validate": "false"
        }
      }
    },
    "user": {
      "$user_id": {
        ".read": "true",
        ".write": "$user_id === auth.uid",
        "profile": {
          ".validate": "true"
        },
        "created_by": {
          ".validate": "newData.isString()"
        },
        "updated_by": {
          ".validate": "newData.isString()"
        },
        "created_on": {
          ".validate": "newData.isString()"
        },
        "updated_on": {
          ".validate": "newData.isString()"
        },
        "last_login": {
          ".validate": "newData.isString()"
        },
        "$other": {
          ".validate": "false"
        }
      }
    },
    "$other": {
      ".validate": "false"
    }
  }
}
