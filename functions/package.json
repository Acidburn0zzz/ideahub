{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "lint": "eslint .",
    "serve": "firebase serve --only functions",
    "shell": "firebase experimental:functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "firebase:save:keys": "npm run firebase:upload:env:dev && npm run firebase:upload:env:stage && npm run firebase:upload:env:live",
    "firebase:upload:env:dev": "sh .env.dev",
    "firebase:upload:env:stage": "sh .env.stage",
    "firebase:upload:env:live": "sh .env.live"
  },
  "dependencies": {
    "algoliasearch": "^3.26.0",
    "firebase-admin": "^6.0.0",
    "firebase-functions": "^2.0.5",
    "stripe": "^5.8.0"
  },
  "devDependencies": {
    "eslint": "^4.12.0",
    "eslint-plugin-promise": "^3.6.0"
  },
  "private": true
}
